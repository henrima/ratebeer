<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
  <table class="table table-hover">
    <thead>
      <% Place.rendered_fields.each do |f| %>
      <td><strong><%=f %></strong></td>
      <% end %>
    </thead>

    	<% @places.each do |place| %>
     		 <tr>
              <td><%= place.id %></td>
	          	<td><%= link_to place.name, place_path(params[:city], place.id) %></td>
              <td><%= place.status %></td>
              <td><%= place.street %></td>
              <td><%= place.city %></td>
              <td><%= place.zip %></td>
              <td><%= place.country %></td>
              <td><%= place.overall %></td>
    	  	</tr>
	    <% end %>	

  	</table>
<% end %>